<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@mipmap/ic_hsee"
            android:id="@+id/logoSuccess" />
        <TextView
            android:fontFamily="@font/poppins"
            android:id="@+id/success_message"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15pt"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Bergabung!"
            android:layout_below="@id/logoSuccess" />
        <TextView
            android:id="@+id/message_confirm"
            android:fontFamily="@font/poppins"
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_below="@id/success_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda berhasil terdaftar di Sitanggap Lapor Desa. Silahkan login" />

        <com.google.android.material.button.MaterialButton
            android:layout_below="@id/message_confirm"
            android:layout_gravity="center"
            android:id="@+id/btn_back_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins"
            android:text="Kembali"
            android:elevation="10dp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:padding="9dp"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>