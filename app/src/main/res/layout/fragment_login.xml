<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="30dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo_sidak"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_sidak"
            android:layout_width="100dp"
            android:layout_marginTop="40dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_below="@+id/logo_sidak"
            android:id="@+id/apps_title"
            android:layout_marginTop="0.5dp"
            android:textSize="13pt"
            android:fontFamily="@font/montserratbold"
            android:textAlignment="center"
            android:textColor="#808080"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="SIDAK" />
        <TextView
            android:layout_below="@id/apps_title"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Sistem Informasi Data, dan K3L" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_below="@+id/apps_title"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="100dp"
            android:padding="20dp"
            android:background="#00ffffff"
            android:elevation="10dp">
            <LinearLayout
                android:clipToPadding="false"
                android:id="@+id/sign_in_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Pilih Kategori Aplikasi" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    app:cardElevation="5dp"
                    android:id="@+id/portal_k3"
                    app:cardCornerRadius="5dp"
                    android:background="#fff"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <LinearLayout
                        android:padding="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_logo_app_k3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7">
                            <RelativeLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:textSize="8pt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="K3" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2">
                            <RelativeLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:src="@drawable/ic_next" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>








                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    android:background="#fff"
                    android:id="@+id/portal_lingkungan"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <LinearLayout
                        android:padding="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_logo_app_lingkungan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7">
                            <RelativeLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:textSize="8pt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lingkungan" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2">
                            <RelativeLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:src="@drawable/ic_next" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>













                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:clipToPadding="false"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    android:background="#fff"
                    android:id="@+id/portal_keamanan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <LinearLayout
                        android:padding="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_logo_app_keamanan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7">
                            <RelativeLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:textSize="8pt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Keamanan" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2">
                            <RelativeLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:src="@drawable/ic_next" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>




            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/login_display"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>



        <RelativeLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo_hse"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_hsee"
                    android:layout_marginBottom="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:layout_below="@id/logo_hse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Portal Aplikasi K3, Keamanan, dan Lingkungan \n Developed By Rajawali Indonesia" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
