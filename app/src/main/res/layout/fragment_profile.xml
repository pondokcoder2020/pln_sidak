<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/header" />
    <FrameLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/back_page"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight=".1"
                android:layout_width="0dp"
                android:layout_height="40dp">
                <RelativeLayout
                    android:background="@drawable/outline_text"
                    android:layout_width="40dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textSize="10pt"
                        android:fontFamily="@font/fasolid900"
                        android:textColor="#fff"
                        android:text="&#xf104;"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight=".6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">
                        <TextView
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:paddingLeft="20dp"
                            android:textColor="#fff"
                            android:text="Profile Saya"
                            android:fontFamily="@font/montserratbold"
                            android:gravity="center_vertical"
                            android:textAlignment="viewStart"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="30dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:paddingTop="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:background="@drawable/rounded_panel"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:padding="0dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="9dp">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/poppins"
                                        android:text="NIP"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:layout_marginBottom="10dp"
                                        android:fontFamily="@font/montserratbold"
                                        android:textColor="#000"
                                        android:id="@+id/txt_nip"
                                        android:text="NIP"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>




                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/poppins"
                                        android:text="Sebutan  Jabatan"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:layout_marginBottom="10dp"
                                        android:fontFamily="@font/montserratbold"
                                        android:textColor="#000"
                                        android:id="@+id/txt_jabatan"
                                        android:text="Email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>



                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/poppins"
                                        android:text="Unit"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:layout_marginBottom="10dp"
                                        android:fontFamily="@font/montserratbold"
                                        android:textColor="#000"
                                        android:id="@+id/txt_unit"
                                        android:text="Email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>





                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/poppins"
                                        android:text="Email PLN"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:layout_marginBottom="10dp"
                                        android:fontFamily="@font/montserratbold"
                                        android:textColor="#000"
                                        android:id="@+id/txt_email"
                                        android:text="Email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>










                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="@font/poppins"
                                        android:text="Phone"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                    <LinearLayout
                                        android:id="@+id/call_me"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_marginBottom="10dp"
                                            android:fontFamily="@font/montserratbold"
                                            android:textColor="#000"
                                            android:id="@+id/txt_contact"
                                            android:text="Phone Number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>







                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:fontFamily="@font/poppins"
                                    android:text="Sertifikasi"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/sertifikasi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <com.google.android.material.button.MaterialButton
                                android:layout_gravity="center"
                                android:id="@+id/btn_logout"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Logout"
                                app:backgroundTint="@null"
                                android:background="@drawable/button_rounded_default"
                                android:layout_margin="30dp"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp"
                                android:padding="9dp"
                                android:textColor="#fff"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <FrameLayout
                    android:elevation="10dp"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama"
                            android:textColor="#fff000"
                            android:id="@+id/txt_nama"
                            android:layout_marginRight="180dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/montserratbold" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_marginRight="60dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="right"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        />
                </FrameLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>