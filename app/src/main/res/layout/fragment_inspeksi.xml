<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="80dp"
    android:background="#f2f2f2">
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/page_loader"
        android:elevation="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/loading_logo"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_hsee"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loading_logo"
                android:text="Loading..."
                android:textAlignment="center"
                android:fontFamily="@font/montserratbold" />
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:ignore="MissingConstraints">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="800dp"
                android:layout_marginLeft="-200dp"
                android:layout_marginTop="-30dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_model2"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/backHome"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight=".1"
                        android:layout_width="0dp"
                        android:layout_height="40dp">
                        <RelativeLayout
                            android:background="@drawable/outline_text"
                            android:layout_width="40dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/back_page"
                                android:layout_centerInParent="true"
                                android:textStyle="bold"
                                android:textSize="10pt"
                                android:fontFamily="@font/fasolid900"
                                android:textColor="#fff"
                                android:text="&#xf104;"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight=".8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true">
                                <TextView
                                    android:paddingLeft="20dp"
                                    android:layout_centerInParent="true"
                                    android:textStyle="bold"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/montserratbold"
                                    android:textColor="#fff"
                                    android:text="Kembali"
                                    android:gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>






                <LinearLayout
                    android:padding="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_panel"
                        android:padding="10dp"
                        android:layout_margin="5dp">
                        <LinearLayout
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:src="@mipmap/ic_hsee"
                                    android:layout_width="0dp"
                                    android:layout_weight=".3"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight=".7"
                                    android:layout_height="match_parent">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <LinearLayout
                                            android:layout_centerInParent="true"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="JJSKDJK"
                                                android:fontFamily="@font/montserratbold"
                                                android:textSize="20sp"
                                                android:id="@+id/txt_kode" />
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Tanggal Kadaluarsa:"
                                                android:fontFamily="@font/poppins"
                                                android:textSize="15sp"
                                                android:layout_below="@id/txt_kode"
                                                android:id="@+id/txt_kadaluarsa" />
                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>



                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:textSize="10sp"
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/poppins"
                                    android:layout_height="wrap_content"
                                    android:text="Tanggal Pengisian" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/montserratbold"
                                    android:text="10 Januari 1990" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/poppins"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:text="Jenis" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/montserratbold"
                                    android:text="Dry Chemical Powder" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:textSize="10sp"
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/poppins"
                                    android:layout_height="wrap_content"
                                    android:text="Satuan" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/montserratbold"
                                    android:text="KG" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:textSize="10sp"
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/poppins"
                                    android:layout_height="wrap_content"
                                    android:text="Kapasitas" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/montserratbold"
                                    android:text="11 - 20" />
                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/load_check"
                            android:nestedScrollingEnabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            android:layout_gravity="center"
                            android:id="@+id/btn_submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@null"
                            android:background="@drawable/button_rounded_default"
                            android:fontFamily="@font/poppins"
                            android:text="Simpan"
                            android:elevation="10dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            app:cornerRadius="5dp"
                            android:padding="9dp"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
